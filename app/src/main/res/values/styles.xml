<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PsychotypeCardStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">@dimen/basic_small_margin</item>
        <item name="contentPaddingTop">@dimen/basic_small_margin</item>
        <item name="contentPaddingLeft">@dimen/basic_small_margin</item>
        <item name="contentPaddingRight">@dimen/basic_small_margin</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

</resources>
