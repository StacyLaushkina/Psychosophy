<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MediumSizeTextStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TitleTextStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitleTextStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/color_primary_border_ripple_background</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/basic_small_margin</item>
        <item name="android:layout_margin">@dimen/basic_small_margin</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">20sp</item><!-- text size in menu-->
        <item name="android:fontFamily">sans-serif-thin</item><!-- text size in menu-->
    </style>

</resources>
